module Number: {
  type t;
  let float: float => t;
  let int: int => t;
  type case =
    | Int(int)
    | Float(float);
  let classify: t => case;
} = {
  [@unboxed]
  type t =
    | Number('a): t;
  let float = (v: float) => Number(v);
  let int = (v: int) => Number(v);
  type case =
    | Int(int)
    | Float(float);
  let isInteger = v =>
    Js.typeof(v) === \"number\"
    && Js.Float.isFinite(v)
    && Js.Math.floor_float(v) === v;
  let classify = (Number(v): t) =>
    isInteger(Obj.magic(v))
      ? Int(Obj.magic(v): int) : Float(Obj.magic(v): float);
};
