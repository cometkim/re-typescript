{
  "name": "re_typescript",
  "description": "",
  "scripts": {
    "format": "dune build @fmt --auto-promote --root .",
    "run": "esy x Re_typescript",
    "watch":
      "esy x redemon --paths=src --extensions=re,atd,mll,mly esy x Re_typescript",
    "watch-test":
      "esy x redemon --paths=tests,src --extensions=re,atd,mll,mly esy x RunTests.exe",
    "test": "esy x RunTests.exe",
    "test-u": "esy x RunTests.exe -u",
    "js": "esy dune build ./src/js/re_typescript_js.bc.js",
    "js-release":
      "esy dune build ./src/js/re_typescript_js.bc.js --profile release-static",
    "release-static":
      "dune build --root . --only-packages '#{self.name}' --ignore-promoted-rules --no-config --profile release-static"
  },
  "dependencies": {
    "@opam/atdgen": "2.2.1",
    "@opam/containers": "2.8.1",
    "@opam/dune": "*",
    "@opam/iter": "1.2.1",
    "@opam/js_of_ocaml": "3.6.0",
    "@opam/js_of_ocaml-ppx": "3.6.0",
    "@opam/menhir": "*",
    "@opam/ocaml-migrate-parsetree": "*",
    "@opam/ppx_tools_versioned": "*",
    "@reason-native/console": "^0.1.0",
    "@reason-native/file-context-printer": "^0.0.3",
    "@reason-native/fp": "^0.0.1",
    "@reason-native/pastel": "^0.3.0",
    "byots": "^4.0.0-dev.20200624.14.21"
  },
  "devDependencies": {
    "@opam/reason": ">=3.6.0",
    "ocaml": "~4.8.0",
    "@opam/js_of_ocaml-compiler": "3.6.0",
    "refmterr": "~3.3.0",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam",
    "@opam/redemon": "ulrikstrid/redemon:redemon.opam",
    "@reason-native/rely": "^3.2.1"
  },
  "esy": {
    "build": [
      [
        "refmterr", "dune", "build", "--profile", "dev", "-p", "#{self.name}"
      ]
    ],
    "buildsInSource": "_build"
  }
}